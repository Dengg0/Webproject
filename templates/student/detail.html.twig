{% extends 'base.html.twig' %}

{% block body %}
<div class="container-md col-md-8 mt-3 mb-3 text-center">
    <a href = "{{ path('student_add') }}">
        <img src = "{{ asset('images/add.jpg') }}" width="60" height="50" >
    </a>

    <table class="table table-responsive-md mt-3 text-center">
        <thead>
            <tr>
                <th> Student ID </th>
                <th> Student Name </th>
                <th> Student Image </th>
                <th> Student Address </th>
                <th> Student Phone </th>
                <th> Student email </th>
                <th> Edit </th>
                <th> Delete </th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>{{ student.id }} </td> 
                    <td>{{ student.name }} </td>
                    <td>{{ student.image }} </td>
                    <td>{{ student.address }} </td>
                    <td>{{ student.Phone }} </td>
                    <td>{{ student.email }} </td>
                    <td>
                        <a href="{{ path('student_edit', {'id': student.id}) }}">
                            <img src="{{ asset('images/edit.png')}}" width="50" height="50" >
                        </a>
                        
                    </td>
                    <td>
                        <a href="{{ path('student_delete', {'id': student.id}) }}"
                            onclick="return container('Do you want to delete this student?')">
                            <img src="{{ asset('images/delete.png')}}" width="50" height="50" >
                         </a>
                    </td>
                </tr>

        </tbody> 
    </table>
{% endblock %}


